<!DOCTYPE html>
<html>

<head>
</head>

<body>
<?php
function generateStars($m) {
  echo "<pre>";
  for ($x = 1; $x < $m; $x++) {
    for ($y = 0; $y < $x; $y++) {
      echo "*";
    }
    echo "<br>";
  }
  for ($x = $m; $x > 0; $x--) {
    for ($y = 0; $y < $x; $y++) {
      echo "*";
    }
    echo "<br>";
  }
}
generateStars(6);

?>

</body>

</html>